<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/control_layout"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <!--movement buttons-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/up_control_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/up_button"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/transparent_ripple_background_round"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/down_control_button"
        app:layout_constraintEnd_toStartOf="@+id/left_control_button"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/left_control_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/transparent_ripple_background_round"
        android:scaleType="centerCrop"
        android:src="@drawable/left_button"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/up_control_button"
        app:layout_constraintStart_toEndOf="@+id/up_control_button"
        app:layout_constraintTop_toTopOf="@+id/up_control_button" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/down_control_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/transparent_ripple_background_round"
        android:scaleType="centerCrop"
        android:src="@drawable/down_button"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/up_control_button"
        app:layout_constraintTop_toBottomOf="@+id/up_control_button"
        app:layout_constraintEnd_toStartOf="@+id/right_control_button"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/right_control_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/transparent_ripple_background_round"
        android:scaleType="centerCrop"
        android:src="@drawable/right_button"
        app:layout_constraintBottom_toBottomOf="@+id/down_control_button"
        app:layout_constraintStart_toEndOf="@+id/down_control_button"
        app:layout_constraintTop_toTopOf="@+id/down_control_button"
        app:layout_constraintEnd_toEndOf="@+id/left_control_button"/>


    <!--Text alignment buttons-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tx_left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/transparent_ripple_background_round"
        android:scaleType="centerCrop"
        android:src="@drawable/tx_align_left"
        app:layout_constraintBottom_toTopOf="@+id/tx_center_button"
        app:layout_constraintEnd_toStartOf="@+id/tx_right_button"
        app:layout_constraintStart_toEndOf="@+id/left_control_button"
        app:layout_constraintTop_toTopOf="@+id/left_control_button" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tx_right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/transparent_ripple_background_round"
        android:scaleType="centerCrop"
        android:src="@drawable/tx_align_right"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tx_left_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tx_left_button" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tx_center_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/transparent_ripple_background_round"
        android:scaleType="centerCrop"
        android:src="@drawable/tx_align_center"
        app:layout_constraintBottom_toBottomOf="@+id/right_control_button"
        app:layout_constraintEnd_toStartOf="@+id/tx_right_button"
        app:layout_constraintStart_toEndOf="@+id/tx_left_button"
        app:layout_constraintTop_toBottomOf="@+id/tx_left_button" />

    <!--edit text button-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/edit_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_background_fragment"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/font_text"
        android:gravity="center"
        android:paddingStart="27.5dp"
        android:paddingEnd="27.5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="@string/edit"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/right_control_button"
        app:layout_constraintTop_toBottomOf="@+id/tx_center_button"
        app:layout_constraintEnd_toStartOf="@+id/copy_text_button"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/copy_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_click_background_fragment"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/font_text"
        android:gravity="center"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="@string/copy"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_button"
        app:layout_constraintEnd_toEndOf="@+id/tx_right_button"
        app:layout_constraintStart_toEndOf="@+id/edit_text_button"
        app:layout_constraintTop_toTopOf="@+id/edit_text_button"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>