<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.edit_create_logo.features.effects.EffectsFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/theme_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/opacity_progress"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--linear progress bar opacity-->
    <SeekBar
        android:id="@+id/opacity_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/custom_seekbar"
        android:thumb="@drawable/seekbar_thumb_icon"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/opacity_icon"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintBottom_toTopOf="@+id/list_effects"/>

    <!--Fragment top view-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/opacity_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/opacity_icon"
        android:layout_marginStart="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/opacity_progress"
        app:layout_constraintBottom_toBottomOf="@+id/opacity_progress"
        app:layout_constraintEnd_toStartOf="@+id/opacity_progress" />

    <!--list of images to edit-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_effects"
        android:layout_width="0dp"
        android:layout_height="166.5dp"
        android:padding="10dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:orientation="horizontal"
        tools:itemCount="15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opacity_progress"
        tools:listitem="@layout/background_image_list_itemview"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progress_bar_anim"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loader_placeholder"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/list_effects"
        app:layout_constraintEnd_toEndOf="@+id/list_effects"
        app:layout_constraintStart_toStartOf="@+id/list_effects"
        app:layout_constraintTop_toTopOf="@+id/list_effects"/>
</androidx.constraintlayout.widget.ConstraintLayout>