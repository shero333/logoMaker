<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/nav_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nav_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_text"
        android:text="@string/title_background"
        android:textSize="12sp"
        android:textColor="@drawable/color_nav"
        app:layout_constraintEnd_toEndOf="@+id/nav_icon"
        app:layout_constraintStart_toStartOf="@+id/nav_icon"
        app:layout_constraintTop_toBottomOf="@+id/nav_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>