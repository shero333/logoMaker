<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dimensions_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:visibility="gone">

    <!--dimension 1 items-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/d1_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/d1"
        app:layout_constraintBottom_toTopOf="@+id/d2_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/d1_progress"/>

    <SeekBar
        android:id="@+id/d1_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/custom_seekbar"
        android:thumb="@drawable/seekbar_thumb_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/d1_icon"
        app:layout_constraintStart_toEndOf="@+id/d1_icon"
        app:layout_constraintBottom_toBottomOf="@+id/d1_icon"/>

    <!--dimension 2 items-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/d2_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/d2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/d1_icon"
        app:layout_constraintEnd_toStartOf="@+id/d2_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/d3_icon"/>

    <SeekBar
        android:id="@+id/d2_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/custom_seekbar"
        android:thumb="@drawable/seekbar_thumb_icon"
        app:layout_constraintTop_toTopOf="@+id/d2_icon"
        app:layout_constraintBottom_toBottomOf="@+id/d2_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/d2_icon" />

    <!--dimension 3 items-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/d3_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/d3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/d2_icon"
        app:layout_constraintEnd_toStartOf="@+id/d3_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <SeekBar
        android:id="@+id/d3_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/custom_seekbar"
        android:thumb="@drawable/seekbar_thumb_icon"
        app:layout_constraintTop_toTopOf="@+id/d3_icon"
        app:layout_constraintBottom_toBottomOf="@+id/d3_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/d3_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>